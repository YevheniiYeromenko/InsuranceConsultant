<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".ClientChangeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Редагування"
        android:textSize="32sp"
        android:textStyle="italic"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etChangeClientPolis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Polis"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etChangeClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etChangeClientBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etChangeClientTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telephone"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etChangeClientAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="64dp">

        <TextView
            android:id="@+id/bChangeClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/cardview_light_background"
            android:text="Зберегти"
            android:layout_marginTop="8dp"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>