<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientChangeActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Редагування"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/etChangeClientPolis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Polis"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etChangeClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etChangeClientBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Birth"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etChangeClientTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telephone"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etChangeClientAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bChangeClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:text="Зберегти"/>

</LinearLayout>