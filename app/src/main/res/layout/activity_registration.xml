<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".RegistrationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Регистрация"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/etLoginRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="Number"
        android:inputType="number"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etNameRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="Name"
        android:inputType="text"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etScoreRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="Score"
        android:inputType="number"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etTrainerNumberRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="Trainer Number"
        android:inputType="text"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etLevelRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="Level"
        android:inputType="text"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etPasswordRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etPasswordRegistrationRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        android:hint="pereat password"
        android:inputType="textPassword"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Registration"
        android:textSize="32sp" />

</LinearLayout>